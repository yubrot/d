[include]
  path = ~/.config/git/config.local
[color]
  ui = true
[core]
  editor = nvim
  autocrlf = false
  fscache = true
  ignorecase = false
  pager = delta
[interactive]
  diffFilter = delta --color-only
[merge]
  tool = nvimdiff
  ff = false
[diff]
  tool = nvimdiff
  algorithm = patience
  colorMoved = default
  compactionHeuristic = true
[pull]
  rebase = true
[difftool]
  prompt = false
[diftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[alias]
  s = status --short --branch
  a = add
  c = commit
  co = checkout
  ps = push -u
  pl = pull --prune
  pls = "!git stash; git pl; git stash pop"
  f = fetch --prune
  fu = fetch --prune upstream
  rg = grep --line-number --show-function --color --heading --break
  history = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
[push]
  default = current
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[delta]
  line-numbers = true
  line-numbers-left-format  = "{np:>4}￤"
  line-numbers-right-format = "{np:>4}｜"
  syntax-theme = Monokai Extended
[init]
  defaultBranch = main
[url "git@github.com:"]
  insteadOf = https://github.com/
[credential "https://github.com"]
  helper = 
  helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
  helper = 
  helper = !/usr/bin/gh auth git-credential
