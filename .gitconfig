[include]
  path = ~/.gitconfig.local
[color]
  ui = true
[core]
  editor = vim
  autocrlf = false
  excludesfile = ~/.gitignore.global
  fscache = true
  ignorecase = false
[merge]
  tool = vimdiff
  ff = false
[diff]
  tool = vimdiff
  algorithm = patience
  compactionHeuristic = true
[pull]
  rebase = true
[difftool]
  prompt = false
[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less
[interactive]
  diffFilter = diff-highlight
[alias]
  s = status --short --branch
  a = add
  c = commit
  co = checkout
  ps = push -u
  pl = pull --prune
  pls = "!git stash; git pl; git stash pop"
  f = fetch --prune
  fu = fetch --prune upstream
  ag = grep --line-number --show-function --color --heading --break
  history = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
[push]
  default = current
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
